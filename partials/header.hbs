<wc-navbar class="border-b border-outlineVariant/20">
  <div slot="logo">
    <a href="{{@site.url}}">
      <wc-logo class="h-6 {{#match @custom.home 'Home 2' }} fill-onPrimaryContainer {{else}} fill-primary {{/match}}"></wc-logo>
    </a>
  </div>
  
  <div slot="navigation">
    <nav class="hidden md:flex items-center space-x-1">
      {{#if @site.navigation}}
        {{#foreach @site.navigation}}
          <a href="{{url}}" class="px-4 py-2 rounded-lg text-onSurface hover:text-primary hover:bg-surfaceContainerLow transition-colors font-medium {{#if current}} bg-primaryContainer text-onPrimaryContainer {{/if}}">
            {{label}}
          </a>
        {{/foreach}}
      {{else}}
        <a href="/" class="px-4 py-2 rounded-lg text-onSurface hover:text-primary hover:bg-surfaceContainerLow transition-colors font-medium">
          Home
        </a>
      {{/if}}
    </nav>
    
    <wc-offcanvas class="md:hidden">
      <nav class="flex flex-col space-y-2 p-4">
        {{#if @site.navigation}}
          {{#foreach @site.navigation}}
            <a href="{{url}}" class="px-4 py-3 rounded-lg text-onSurface hover:text-primary hover:bg-surfaceContainerLow transition-colors text-lg {{#if current}} bg-primaryContainer text-onPrimaryContainer {{/if}}">
              {{label}}
            </a>
          {{/foreach}}
        {{else}}
          <a href="/" class="px-4 py-3 rounded-lg text-onSurface hover:text-primary hover:bg-surfaceContainerLow transition-colors text-lg">
            Home
          </a>
        {{/if}}
      </nav>
    </wc-offcanvas>
  </div>
  
  <div slot="actions">
    <button class="p-2 rounded-full hover:bg-surfaceContainerLow transition-colors" data-ghost-search>
      <span class="icon-[carbon--search] block h-6 w-6 text-onSurfaceVariant"></span>
    </button>
  </div>
</wc-navbar>

