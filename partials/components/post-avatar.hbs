<div class="flex items-center gap-4 p-4 rounded-lg hover:bg-surfaceContainerLow transition-colors">
    <img src="{{primary_author.profile_image}}" alt="{{primary_author.name}}" class="w-12 h-12 rounded-full object-cover flex-shrink-0" />
    <div class="flex-1 min-w-0">
        <a href="{{primary_author.url}}" class="text-sm text-onSurfaceVariant hover:text-primary transition-colors block mb-1">
            {{primary_author.name}}
        </a>
        <a href="{{url}}" class="text-onSurface hover:text-primary transition-colors">
            <h3 class="headline-6 line-clamp-2 mb-1">
                {{title}}
            </h3>
        </a>
        <div class="text-xs text-onSurfaceVariant">
            <span class="capitalize">{{date published_at format="MMM DD, YYYY" locale="es"}}</span>
            <span class="mx-1">â€¢</span>
            <span>{{reading_time minute="1 min" minutes="% min"}}</span>
        </div>
    </div>
</div>