<section class="section flex flex-col md:flex-row gap-8 mt-8">
  <div class="md:w-2/4">
    {{#get "posts" filter="tag:hash-principal" limit="1" include="tags,authors" as |post|}}
      {{#post}}
        <wc-card 
          title="{{title}}" 
          url="{{url}}" 
          excerpt="{{excerpt}}" 
          feature_image="{{feature_image}}"
          tag_name="{{primary_tag.name}}" 
          tag_url="{{primary_tag.url}}" 
          author_name="{{primary_author.name}}"
          author_url="{{primary_author.url}}" 
          reading_time="{{reading_time minute='1 min' minutes='% min'}}"
          published_at="{{date published_at format='MMM DD, YYYY' locale='es'}}"
          media_align="top" 
          heading="2" 
          density="normal"
          aspect_ratio="video"
          elevation="2"
          class="h-full">
        </wc-card>
      {{/post}}
    {{/get}}
  </div>
  
  <div class="md:w-1/4 flex flex-col gap-8">
    <wc-grille desktop="1" mobile="1" gap="medium">
      {{#get "posts" filter="tag:hash-secundario" limit="2" include="tags,authors"}}
        {{#foreach posts}}
          <wc-card 
            title="{{title}}" 
            url="{{url}}" 
            excerpt="{{excerpt}}" 
            tag_name="{{primary_tag.name}}"
            tag_url="{{primary_tag.url}}" 
            author_name="{{primary_author.name}}" 
            author_url="{{primary_author.url}}"
            reading_time="{{reading_time minute='1 min' minutes='% min'}}"
            published_at="{{date published_at format='MMM DD, YYYY' locale='es'}}" 
            media_align="top" 
            heading="5" 
            density="normal" 
            aspect_ratio="video"
            elevation="1">
          </wc-card>
        {{/foreach}}
      {{/get}}
    </wc-grille>
  </div>
  
  <div class="md:w-1/4">
    <wc-grille desktop="1" mobile="1" gap="medium">
      {{#get "posts" filter="tag:hash-complementario" limit="3" include="tags,authors"}}
        {{#foreach posts}}
          <wc-card 
            title="{{title}}" 
            url="{{url}}" 
            excerpt="{{excerpt}}" 
            {{#if @first}}feature_image="{{feature_image}}"{{/if}}
            tag_name="{{primary_tag.name}}"
            tag_url="{{primary_tag.url}}" 
            author_name="{{primary_author.name}}" 
            author_url="{{primary_author.url}}"
            reading_time="{{reading_time minute='1 min' minutes='% min'}}"
            published_at="{{date published_at format='MMM DD, YYYY' locale='es'}}" 
            media_align="top"
            media_width="is-one-third" 
            heading="6" 
            density="compact" 
            aspect_ratio="monitor"
            elevation="1">
          </wc-card>
        {{/foreach}}
      {{/get}}
    </wc-grille>
  </div>
</section>