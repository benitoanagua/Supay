<section class="relative flex items-end md:items-center bg-surfaceContainerHighest min-h-96 rounded-xl overflow-hidden mb-8">
  {{#get "posts" filter="tag:hash-principal" limit="1" include="tags,authors" as |post|}}
    {{#post}}
      <wc-overlay
        title="{{title}}"
        url="{{url}}"
        feature_image="{{feature_image}}"
        tag_name="{{primary_tag.name}}"
        author_name="{{primary_author.name}}"
        published_at="{{date published_at format='MMM DD, YYYY' locale='es'}}"
        reading_time="{{reading_time minute='1 min' minutes='% min'}}"
        aspect_ratio="video"
        heading="1"
        show_meta="true"
        align="center"
        position="center"
        box="background"
        fill="gradient"
        class="w-full h-full">
      </wc-overlay>
    {{/post}}
  {{/get}}
</section>

<section class="section">
  <div class="flex flex-col md:flex-row gap-8">
    <div class="md:w-3/5">
      <wc-grille desktop="2" mobile="1" gap="medium">
        {{#get "posts" filter="tag:hash-secundario" limit="2" include="tags,authors"}}
          {{#foreach posts}}
            <wc-card 
              title="{{title}}" 
              url="{{url}}" 
              excerpt="{{excerpt}}" 
              {{#if @first}}feature_image="{{feature_image}}"{{/if}}
              tag_name="{{primary_tag.name}}"
              tag_url="{{primary_tag.url}}" 
              author_name="{{primary_author.name}}" 
              author_url="{{primary_author.url}}"
              reading_time="{{reading_time minute='1 min' minutes='% min'}}"
              published_at="{{date published_at format='MMM DD, YYYY' locale='es'}}" 
              media_align="top" 
              heading="5"
              {{#if @first}}density="compact"{{/if}}
              aspect_ratio="video"
              elevation="1">
            </wc-card>
          {{/foreach}}
        {{/get}}
      </wc-grille>
    </div>
    
    <div class="md:w-2/5">
      <wc-grille desktop="1" mobile="1" gap="medium">
        {{#get "posts" filter="tag:hash-complementario" limit="3" include="tags,authors"}}
          {{#foreach posts}}
            <wc-card 
              title="{{title}}" 
              url="{{url}}" 
              excerpt="{{excerpt}}" 
              tag_name="{{primary_tag.name}}"
              tag_url="{{primary_tag.url}}" 
              author_name="{{primary_author.name}}" 
              author_url="{{primary_author.url}}"
              reading_time="{{reading_time minute='1 min' minutes='% min'}}"
              published_at="{{date published_at format='MMM DD, YYYY' locale='es'}}" 
              media_align="left" 
              heading="6"
              density="compact" 
              aspect_ratio="video" 
              media_width="is-one-third"
              elevation="1">
            </wc-card>
          {{/foreach}}
        {{/get}}
      </wc-grille>
    </div>
  </div>
</section>