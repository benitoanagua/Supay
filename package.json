{
	"name": "supay",
	"description": "A Ghost CMS theme inspired by Andean culture, built with Tailwind CSS v4, Material Design 3, and Svelte web components.",
	"version": "0.1.0",
	"license": "MIT",
	"author": {
		"name": "Benito Anagua",
		"email": "benito.anagua@gmail.com",
		"url": "https://benitoanagua.me"
	},
	"keywords": [
		"supay",
		"Benito Anagua",
		"ghost",
		"ghost-theme"
	],
	"scripts": {
		"start": "postcss ./assets/css/tailwind.css -o ./assets/build/tailwind.css --minify --watch",
		"tailwind": "tailwindcss  -i ./assets/css/tailwind.css -o ./assets/build/tailwind.css --minify"
	},
	"screenshots": {
		"desktop": "assets/hello-world-thumb.png"
	},
	"config": {
		"image_sizes": {
			"xxs": {
				"width": 30
			},
			"xs": {
				"width": 100
			},
			"s": {
				"width": 300
			},
			"m": {
				"width": 600
			},
			"l": {
				"width": 1000
			},
			"xl": {
				"width": 2000
			}
		},
		"posts_per_page": 10,
		"card_assets": true
	},
	"dependencies": {
		"autoprefixer": "^10.4.21",
		"postcss": "^8.5.6",
		"postcss-cli": "^11.0.1",
		"tailwindcss": "^4.1.13"
	}
}
