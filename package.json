{
  "name": "supay",
  "description": "A Ghost CMS theme inspired by Andean culture, built with Tailwind CSS v4, Material Design 3, and Lit web components.",
  "demo": "https://benitoanagua.github.io/Supay",
  "version": "0.1.2",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "type": "module",
  "license": "MIT",
  "author": {
    "name": "Benito Anagua",
    "email": "benito.anagua@gmail.com",
    "url": "https://benitoanagua.me"
  },
  "gpm": {
    "type": "theme",
    "categories": [
      "Minimal",
      "Cultural",
      "Magazine"
    ]
  },
  "keywords": [
    "supay",
    "ghost",
    "ghost-theme",
    "andean",
    "cultural",
    "tailwind",
    "material-design",
    "lit"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/benitoanagua/Supay.git"
  },
  "bugs": "https://github.com/benitoanagua/Supay/issues",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:watch": "vite build --watch",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "prettier": "prettier --write \"src/**/*.{js,ts,html,css}\"",
    "prettier:check": "prettier --check \"src/**/*.{js,ts,html,css}\"",
    "format": "npm run prettier",
    "lint": "npm run prettier:check && npm run type-check",
    "content": "node src/scripts/ghost-content.js",
    "content:help": "node src/scripts/ghost-content.js --help",
    "zip": "node src/scripts/zip.js",
    "test": "gscan .",
    "test:ci": "gscan --fatal --verbose .",
    "pretest": "npm run build",
    "preship": "npm test",
    "ship": "node src/scripts/ship.js",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "generate:theme": "tsx src/plugins/material-theme/cli.ts",
    "prestart": "npm run generate:theme",
    "prebuild": "npm run generate:theme"
  },
  "screenshots": {
    "desktop": "assets/hello-world-thumb.png"
  },
  "devDependencies": {
    "@iconify-json/garden": "^1.2.2",
    "@iconify/tailwind4": "^1.0.6",
    "@lit-labs/observers": "^2.0.6",
    "@lit/reactive-element": "^2.1.1",
    "@material/material-color-utilities": "^0.3.0",
    "@ngneat/falso": "^8.0.2",
    "@storybook/addon-a11y": "^9.1.8",
    "@storybook/addon-essentials": "9.0.0-alpha.12",
    "@storybook/html": "^9.1.8",
    "@storybook/html-vite": "^9.1.8",
    "@tailwindcss/vite": "^4.1.13",
    "@types/node": "^24.9.1",
    "eslint": "^9.36.0",
    "gscan": "^5.1.0",
    "lit": "^3.3.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "storybook": "^9.1.8",
    "tailwindcss": "^4.1.13",
    "ts-loader": "^9.5.4",
    "tslint": "^6.1.3",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1",
    "vite": "^7.1.7"
  },
  "browserslist": [
    "last 2 versions and not dead"
  ],
  "config": {
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 2000
      }
    },
    "posts_per_page": 12,
    "card_assets": true,
    "custom": {
      "twitter_url": {
        "type": "text",
        "label": "Twitter URL"
      },
      "youtube_url": {
        "type": "text",
        "label": "Youtube URL"
      },
      "instagram_url": {
        "type": "text",
        "label": "Instagram URL"
      },
      "tiktok_url": {
        "type": "text",
        "label": "Tik Tok URL"
      },
      "home": {
        "type": "select",
        "options": [
          "Home 1",
          "Home 2",
          "Home 3"
        ],
        "default": "Home 1",
        "group": "homepage"
      },
      "color_scheme": {
        "type": "select",
        "options": [
          "Light",
          "Dark",
          "Auto"
        ],
        "default": "Light"
      },
      "featured_category_1": {
        "type": "text",
        "label": "Categoría Principal 1 (slug)",
        "group": "homepage"
      },
      "featured_category_1_name": {
        "type": "text",
        "label": "Nombre Categoría Principal 1",
        "group": "homepage"
      },
      "featured_category_2": {
        "type": "text",
        "label": "Categoría Principal 2 (slug)",
        "group": "homepage"
      },
      "featured_category_2_name": {
        "type": "text",
        "label": "Nombre Categoría Principal 2",
        "group": "homepage"
      },
      "featured_category_3": {
        "type": "text",
        "label": "Categoría Sidebar (slug)",
        "group": "homepage"
      },
      "featured_category_3_name": {
        "type": "text",
        "label": "Nombre Categoría Sidebar",
        "group": "homepage"
      },
      "excluded_tags": {
        "type": "text",
        "label": "Tags excluidos (separados por comas)",
        "group": "homepage"
      }
    }
  }
}
