{{!< default}}
{{#match @custom.home "Home 1"}}
    {{> blocks/home-1}}
{{/match}}
{{#match @custom.home "Home 2"}}
    {{> blocks/home-2}}
{{/match}}
{{#match @custom.home "Home 3"}}
    {{> blocks/home-3}}
{{/match}}

<div style="background: #f0f0f0; padding: 20px; margin: 20px; border: 1px solid #ccc;">
    <h2>üêõ DEBUG INFO</h2>
    <p><strong>Config Cat1:</strong> "{{@custom.featured_category_1}}" ({{@custom.featured_category_1_name}})</p>
    <p><strong>Config Cat2:</strong> "{{@custom.featured_category_2}}" ({{@custom.featured_category_2_name}})</p>
    <p><strong>Config Cat3:</strong> "{{@custom.featured_category_3}}" ({{@custom.featured_category_3_name}})</p>
</div>


<section class="section mt-8">
    <div class="grid gap-8 grid-cols-1 md:grid-cols-5">
        <main class="md:col-span-3 md:pr-8 md:border-r md:border-outlineVariant">
            
            {{!-- Primera categor√≠a principal --}}
            <div class="pb-8">
                {{#get "posts" filter="primary_tag:{{@custom.featured_category_1_name}}" include="tags,authors"}}
                        {{> blocks/headline name="Art√≠culos Recientes"}}
                        <wc-grille desktop="1" mobile="1" gap="medium">
                            {{#foreach posts}}
                                <wc-card 
                                    title="{{title}}" 
                                    url="{{url}}" 
                                    excerpt="{{excerpt}}" 
                                    {{#unless @last}}feature-image="{{feature_image}}"{{/unless}}
                                    tag-name="{{primary_tag.name}}"
                                    tag-url="{{primary_tag.url}}" 
                                    author-name="{{primary_author.name}}"
                                    author-url="{{primary_author.url}}" 
                                    reading-time="{{reading_time minute="1 min" minutes="% min"}}"
                                    published-at="{{date published_at format="MMM DD, YYYY" locale="es"}}" 
                                    media-align="right" 
                                    {{#if @first}} 
                                        media-width="is-half" 
                                        heading="5"
                                    {{else}} 
                                        media-width="is-one-quarter" 
                                        density="compact"
                                        heading="6"
                                    {{/if}}
                                    elevation="1">
                                </wc-card>
                            {{/foreach}}
                        </wc-grille>
                    {{/get}}
            </div>
            
            {{!-- Segunda categor√≠a principal --}}
            <div class="pt-8 border-t border-outlineVariant">
                {{#get "posts" filter="primary_tag:{{@custom.featured_category__name}}"  include="tags,authors"}}
                    {{#if posts}}
                        {{> blocks/headline name="M√°s Art√≠culos"}}
                        <wc-grille desktop="1" mobile="1" gap="medium">
                            {{#foreach posts}}
                                <wc-card 
                                    title="{{title}}" 
                                    url="{{url}}" 
                                    excerpt="{{excerpt}}" 
                                    {{#unless @last}}feature-image="{{feature_image}}"{{/unless}}
                                    tag-name="{{primary_tag.name}}"
                                    tag-url="{{primary_tag.url}}" 
                                    author-name="{{primary_author.name}}"
                                    author-url="{{primary_author.url}}" 
                                    reading-time="{{reading_time minute="1 min" minutes="% min"}}"
                                    published-at="{{date published_at format="MMM DD, YYYY" locale="es"}}" 
                                    media-align="left" 
                                    {{#if @first}} 
                                        media-width="is-half" 
                                        heading="5"
                                    {{else}} 
                                        media-width="is-one-quarter" 
                                        density="compact"
                                        heading="6"
                                    {{/if}}
                                    elevation="1">
                                </wc-card>
                            {{/foreach}}
                        </wc-grille>
                    {{/if}}
                {{/get}}
            </div>
        </main>
        
        <aside class="md:col-span-2 md:pl-8">
            <div class="sticky top-24">
                {{!-- Categor√≠a del sidebar --}}
                <div class="mb-8">
                    {{#get "posts" limit="4" include="tags,authors"}}
                        {{> blocks/headline name="Art√≠culos Destacados"}}
                        <div class="space-y-6">
                            {{#foreach posts}}
                                {{> components/post-avatar}}
                            {{/foreach}}
                        </div>
                    {{/get}}
                </div>
                
                <hr class="my-8 border-outlineVariant" />
                
                <h3 class="headline-6 text-onSurface mb-4">Descubra m√°s de lo que le importa</h3>
                <div class="flex flex-wrap gap-2">
                    {{#if @custom.excluded_tags}}
                        {{#get "tags" limit="12" filter="slug:-[{{@custom.excluded_tags}}]"}}
                            {{#foreach tags}}
                                <a href="{{url}}" class="bg-surfaceContainerHighest text-onSurfaceVariant px-4 py-2 rounded-full text-sm font-medium hover:bg-primaryContainer hover:text-onPrimaryContainer transition-colors">
                                    {{name}}
                                </a>
                            {{/foreach}}
                        {{/get}}
                    {{else}}
                        {{#get "tags" limit="12" filter="visibility:public"}}
                            {{#foreach tags}}
                                <a href="{{url}}" class="bg-surfaceContainerHighest text-onSurfaceVariant px-4 py-2 rounded-full text-sm font-medium hover:bg-primaryContainer hover:text-onPrimaryContainer transition-colors">
                                    {{name}}
                                </a>
                            {{/foreach}}
                        {{/get}}
                    {{/if}}
                </div>
            </div>
        </aside>
    </div>
</section>