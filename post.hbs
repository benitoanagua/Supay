{{!< default}}
{{#post}}
    <section class="section mt-8">
        <article class="mx-auto max-w-4xl">
            <h1 class="headline-1 text-onSurface mb-4">{{title}}</h1>
            
            {{#if excerpt}}
                <p class="text-xl text-onSurfaceVariant italic mb-6 leading-relaxed">{{excerpt}}</p>
            {{/if}}
            
            <div class="border-y border-outlineVariant py-4 mb-8">
                {{> blocks/share}}
            </div>
            
            <div class="flex items-center gap-4 mb-8">
                <img src="{{primary_author.profile_image}}" alt="{{primary_author.name}}" class="w-12 h-12 rounded-full object-cover" />
                <div>
                    <a href="{{primary_author.url}}" class="text-onSurface hover:text-primary transition-colors font-medium">
                        {{primary_author.name}}
                    </a>
                    <div class="text-sm text-onSurfaceVariant">
                        <span class="capitalize">{{date published_at format="MMM DD, YYYY" locale="es"}}</span>
                        <span class="mx-2">â€¢</span>
                        <span>{{reading_time minute="1 min" minutes="% min"}}</span>
                    </div>
                </div>
            </div>
            
            {{#if feature_image}}
                <figure class="mb-8">
                    <img 
                        srcset="{{img_url feature_image size="s"}} 300w, 
                               {{img_url feature_image size="m"}} 600w,
                               {{img_url feature_image size="l"}} 1000w,
                               {{img_url feature_image size="xl"}} 2000w"
                        sizes="(min-width: 1400px) 1400px, 92vw" 
                        src="{{img_url feature_image size="xl"}}"
                        alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                        class="w-full mb-1 aspect-video object-cover rounded-xl" />
                    {{#if feature_image_caption}}
                        <figcaption class="text-sm text-onSurfaceVariant italic text-center mt-2">
                            {{feature_image_caption}}
                        </figcaption>
                    {{/if}}
                </figure>
            {{/if}}
            
            <div class="prose prose-lg max-w-none text-onSurface mb-8">
                {{content}}
            </div>
            
            {{#if tags}}
                <div class="flex flex-wrap gap-2 mb-8">
                    {{#foreach tags}}
                        <a href="{{url}}" class="bg-surfaceContainerHighest text-onSurfaceVariant px-4 py-2 rounded-full text-sm font-medium hover:bg-primaryContainer hover:text-onPrimaryContainer transition-colors">
                            {{name}}
                        </a>
                    {{/foreach}}
                </div>
            {{/if}}
            
            <div class="border-t border-outlineVariant pt-8 mb-8">
                {{> blocks/share}}
            </div>
        </article>
    </section>
    
    <section class="section mt-8">
        <div class="mx-auto max-w-4xl">
            {{> blocks/headline name='Relacionados'}}
            <wc-grille desktop="2" mobile="1" gap="medium">
                {{#get "posts" filter="tag:{{primary_tag.slug}}+id:-{{id}}" limit="4" include="tags,authors"}}
                    {{#foreach posts}}
                        <wc-card 
                            title="{{title}}" 
                            url="{{url}}" 
                            excerpt="{{excerpt}}" 
                            feature_image="{{feature_image}}"
                            tag_name="{{primary_tag.name}}" 
                            tag_url="{{primary_tag.url}}"
                            author_name="{{primary_author.name}}" 
                            author_url="{{primary_author.url}}"
                            reading_time="{{reading_time minute="1 min" minutes="% min"}}"
                            published_at="{{date published_at format="MMM DD, YYYY" locale="es"}}" 
                            media_align="top"
                            heading="6" 
                            density="compact" 
                            aspect_ratio="video"
                            elevation="1">
                        </wc-card>
                    {{/foreach}}
                {{/get}}
            </wc-grille>
        </div>
    </section>
    
    <section class="section mt-8">
        <div class="mx-auto max-w-4xl">
            {{> blocks/headline name='Comentarios'}}
            {{> components/comments}}
        </div>
    </section>
{{/post}}